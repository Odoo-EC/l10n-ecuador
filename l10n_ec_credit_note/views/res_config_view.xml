<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="l10n_ec_account_edi.res_config_settings_l10n_ec_edi"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='l10n_ec_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Credit Note</span>
                        <div class="row col-12 oe_grey">
                            <ul>
                                <li
                                >Set the default account for discount credit notes</li>
                            </ul>
                        </div>
                        <div class="row col-12">
                            <label
                                for="l10n_ec_property_account_discount_id"
                                string="C.C. Discount"
                            />
                            <field
                                name="l10n_ec_property_account_discount_id"
                                class="oe_in_line"
                            />
                        </div>
                        <div class="row col-12 oe_grey">
                            <ul>
                                <li>Set the default account for return credit notes</li>
                            </ul>
                        </div>
                        <div class="row col-12">
                            <label
                                for="l10n_ec_property_account_return_id"
                                string="C.C. Refund"
                            />
                            <field
                                name="l10n_ec_property_account_return_id"
                                class="oe_in_line"
                            />
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
